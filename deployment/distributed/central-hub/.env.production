# Central Hub Production Environment Variables
# This file contains only the variables needed for the Central Hub deployment

# Application Environment
ENVIRONMENT=production
DEBUG=false
APP_NAME=Project Synapse - Central Hub
APP_VERSION=2.2.0

# API Configuration
API_VERSION=v1
API_TITLE=Project Synapse Central Hub
API_DESCRIPTION=The Definitive Web Intelligence Network - Central Hub

# Database Configuration (will be set in Render dashboard)
# DATABASE_URL=postgresql://postgres:password@host:5432/database

# Redis Configuration (will be set in Render dashboard)  
# REDIS_URL=redis://default:password@host:6379

# Security Settings (will be set in Render dashboard)
# SECRET_KEY=your-secret-key-here
# ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_ENABLED=true
FREE_TIER_LIMIT=1000
PREMIUM_TIER_LIMIT=10000
ENTERPRISE_TIER_LIMIT=100000

# CORS Settings
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Monitoring
PROMETHEUS_ENABLED=true